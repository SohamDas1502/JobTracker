# Database Configuration
# Choose one of the options below and update DATABASE_URL accordingly

# Option 1: Local development (Prisma dev server)
DATABASE_URL="prisma+postgres://localhost:51213/?api_key=your-local-api-key"

# Option 2: Supabase (recommended for production)
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Option 3: Railway (alternative for production)  
# DATABASE_URL="postgresql://postgres:[PASSWORD]@[HOST].railway.app:5432/railway"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-in-production"

# Google OAuth (optional)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration for Password Reset
# For development/testing, you can use Ethereal Email (temporary test emails)
# For production, replace with your actual SMTP service

# Ethereal Email (for testing) - creates temporary test accounts
# Visit https://ethereal.email/ to see sent emails
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-ethereal-user@ethereal.email
SMTP_PASS=your-ethereal-password

# Gmail SMTP (for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# SendGrid (for production)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# From email address
FROM_EMAIL=noreply@jobstash.com

# Email Configuration (optional - for notifications)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR="uploads"
